{
    "AWSEBDockerVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "sammour1/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128 
        },
        {
            "name": "server",
            "image": "sammour1/multi-server",
            "hostname": "api",
            "essential":false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "sammour1/multi-worker",
            "essential":false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "sammour1/multi-nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }

    ]
}